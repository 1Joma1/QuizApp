<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="m">#FFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TitleText" parent="AppTheme.BoldText">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">32dp</item>
    </style>

    <style name="SubtitleText" parent="AppTheme.BoldText">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="SubText" parent="AppTheme.RegularText">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:padding">@dimen/content_margin</item>
    </style>

    <style name="GreyAccent">
        <item name="colorAccent">@color/light_grey</item>
        <item name="colorPrimary">@color/light_grey</item>
    </style>

    <style name="AppTheme.BoldText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="AppTheme.RegularText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.SemiboldText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.LightText">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

</resources>
